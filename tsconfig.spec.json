/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "paths": {
      "@boiler/core/*": ["src/app/core/*"],
      "@boiler/theme/*": ["src/app/theme/*"],
      "@boiler/shared/*": ["src/app/shared/*"],
      "@boiler/env/*": ["src/environments/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
